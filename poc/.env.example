# OpenAI API Key for Whisper transcription
OPENAI_API_KEY=your_openai_api_key_here

# Default audio device name (optional, will use system default if not specified)
DEVICE_NAME=

# Audio settings (optional)
SAMPLE_RATE=16000
CHANNELS=1

# Email settings (optional, for sending meeting summaries via email)
EMAIL_SERVICE=gmail
EMAIL_HOST=
EMAIL_PORT=
EMAIL_SECURE=true
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here
