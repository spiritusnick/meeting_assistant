{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "outDir": "dist",
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "allowJs": true
  },
  "include": ["src/**/*", "src/types/**/*.d.ts", "src/renderer/types/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "src/generated/**"],
  "typeRoots": ["./node_modules/@types", "./src/types", "./src/renderer/types"]
}
